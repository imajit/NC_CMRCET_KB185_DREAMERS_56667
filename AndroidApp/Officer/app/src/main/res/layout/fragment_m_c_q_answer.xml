<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MCQAnswerFragment"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewQuestion"
                android:layout_weight="1"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/medium_large_padding">




                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/textViewQuestionDetail"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="The Question will go here in this section and the answer in the bottom section "
                        android:textSize="25sp" />



                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dottedline"
                android:layerType="software" />





            <com.google.android.material.card.MaterialCardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewAnswerMCQ"
                android:layout_weight="3"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/medium_large_padding">




                    <RadioGroup
                        android:id="@+id/radio_group_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioButtonAnswer1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excellent" />

                        <RadioButton
                            android:id="@+id/radioButtonAnswer2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good" />

                        <RadioButton
                            android:id="@+id/radioButtonAnswer3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average" />
                        <RadioButton
                            android:id="@+id/radioButtonAnswer4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poor" />
                    </RadioGroup>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FloatingButtonMCQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/done"/>


        </LinearLayout>







    </LinearLayout>

